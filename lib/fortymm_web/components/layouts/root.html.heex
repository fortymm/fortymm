<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Fortymm" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen bg-base-100">
    <%!-- Navbar --%>
    <div class="navbar bg-base-200 fixed top-0 left-0 right-0 z-50">
      <div class="flex-1">
        <%= if @current_scope do %>
          <%!-- Hamburger menu button - only visible on mobile --%>
          <button
            id="mobile-menu-toggle"
            class="btn btn-ghost btn-square lg:hidden"
            phx-click={
              JS.toggle(to: "#mobile-menu") |> JS.toggle_class("hidden", to: "#mobile-menu")
            }
            aria-label="Toggle menu"
          >
            <.icon name="hero-bars-3" class="size-6" />
          </button>
        <% end %>
        <.link
          href={if @current_scope, do: ~p"/dashboard", else: ~p"/"}
          class="btn btn-ghost text-xl"
        >
          FortyMM
        </.link>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
          <%= if @current_scope do %>
            <li>
              <div
                phx-click={JS.toggle(to: "#user-menu")}
                class="cursor-pointer"
              >
                <FortymmWeb.Components.Gravatar.avatar
                  email={@current_scope.user.email}
                  size={32}
                  class="w-5 h-5 rounded-full"
                  alt={@current_scope.user.username}
                />
                {@current_scope.user.username}
              </div>
              <ul
                id="user-menu"
                phx-click-away={JS.hide(to: "#user-menu")}
                class="hidden menu dropdown-content bg-base-200 rounded-box w-56 mt-6 z-[1] p-2 shadow absolute right-0"
              >
                <li>
                  <.link
                    href={~p"/users/settings"}
                    class={[assigns[:active_nav] == :settings && "menu-active"]}
                  >
                    <.icon name="hero-user-circle" class="size-5" /> Account Settings
                  </.link>
                </li>
                <li>
                  <.link href={~p"/users/log-out"} method="delete" class="text-error">
                    <.icon name="hero-arrow-left-on-rectangle" class="size-5" /> Sign Out
                  </.link>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <.link href={~p"/users/register"}>Register</.link>
            </li>
            <li>
              <.link href={~p"/users/log-in"}>Log in</.link>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <%!-- Main content area with sidenav --%>
    <div class="flex pt-16">
      <%= if @current_scope do %>
        <%!-- Desktop Sidenav - only visible on large screens --%>
        <aside class="hidden lg:block w-64 bg-base-200 min-h-screen fixed left-0 top-16">
          <ul class="menu menu-lg bg-base-200 w-full p-2">
            <li>
              <.link
                href={~p"/dashboard"}
                class={[assigns[:active_nav] == :dashboard && "menu-active"]}
              >
                <.icon name="hero-home" class="size-5" /> Dashboard
              </.link>
            </li>
          </ul>
        </aside>

        <%!-- Mobile Menu - overlay that shows when hamburger is clicked --%>
        <div
          id="mobile-menu"
          class="hidden fixed inset-0 bg-black/50 z-[60] lg:hidden"
        >
          <button
            class="btn btn-ghost btn-sm btn-circle absolute top-4 left-[272px] text-white"
            phx-click={JS.hide(to: "#mobile-menu") |> JS.add_class("hidden", to: "#mobile-menu")}
            aria-label="Close menu"
          >
            <.icon name="hero-x-mark" class="size-6" />
          </button>
          <aside
            class="w-64 bg-base-200 min-h-screen shadow-2xl animate-slide-in-left"
            phx-click={JS.exec("event.stopPropagation()")}
          >
            <ul class="menu menu-lg bg-base-200 w-full p-2 pt-4">
              <li>
                <.link
                  href={~p"/dashboard"}
                  class={[assigns[:active_nav] == :dashboard && "menu-active"]}
                >
                  <.icon name="hero-home" class="size-5" /> Dashboard
                </.link>
              </li>
            </ul>
          </aside>
          <div
            class="absolute inset-0 -z-10"
            phx-click={JS.hide(to: "#mobile-menu") |> JS.add_class("hidden", to: "#mobile-menu")}
          >
          </div>
        </div>

        <%!-- Main content with left margin for sidenav on desktop --%>
        <main class="flex-1 lg:ml-64 p-4">
          {@inner_content}
        </main>
      <% else %>
        <%!-- No sidenav for logged out users --%>
        <main class="flex-1 p-4">
          {@inner_content}
        </main>
      <% end %>
    </div>
  </body>
</html>
